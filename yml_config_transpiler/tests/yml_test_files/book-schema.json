{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "story": {
      "type": "object",
      "required": ["content", "chapter"],
      "properties": {
        "content": {
          "type": "string"
        },
        "chapter": {
          "type": "integer"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "covers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "color": {
            "type": "string"
          },
          "size": {
            "type": "integer"
          }
        }
      }
    }
  },
  "required": ["title", "summary", "story"]
}
